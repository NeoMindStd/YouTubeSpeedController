{
    "manifest_version": 3,
    "name": "YouTube Speed Controller",
    "version": "1.1",
    "description": "Set YouTube playback speed to custom values.",
    "permissions": ["activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "48": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "exclude_matches": ["*://www.youtube.com/shorts/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
  }
  